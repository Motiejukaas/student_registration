<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="260.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student_registration.control.EditStudentController">
    <AnchorPane prefHeight="285.0" prefWidth="230.0">
        <ChoiceBox fx:id="group_choice_box" layoutX="15.0" layoutY="14.0" prefWidth="200.0"/>
        <ChoiceBox fx:id="student_choice_box" layoutX="15.0" layoutY="48.0" prefWidth="200.0"/>
        <TextField fx:id="name_text_field" layoutX="15.0" layoutY="82.0" prefWidth="200.0"
                   promptText="Enter student name"/>
        <TextField fx:id="surname_text_field" layoutX="15.0" layoutY="115.0" prefWidth="200.0"
                   promptText="Enter student surname"/>
        <TextField fx:id="student_id_text_field" layoutX="15.0" layoutY="148.0" prefWidth="200.0"
                   promptText="Enter student ID"/>
        <TextField fx:id="date_text_field" layoutX="15.0" layoutY="181.0" prefWidth="200.0"
                   promptText="Enter date"/>
        <Button fx:id="submit_button" layoutX="83.0" layoutY="216.0" onAction="#submitData" text="Submit">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </AnchorPane>
</VBox>
