<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student_registration.control.EditStudentController">
    <children>
        <ChoiceBox fx:id="group_choice_box" prefWidth="200.0" onAction="#loadStudents">
            <!-- Populate the choice box with available group options -->
        </ChoiceBox>
        <ChoiceBox fx:id="student_choice_box" prefWidth="200.0" />
        <!-- Add necessary text fields and choice boxes for student data -->
        <Button fx:id="submit_button" onAction="#submitData" text="Submit" />
    </children>
</VBox>
